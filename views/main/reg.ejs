<% include ../layout %>
    <body>
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-12 col-md-4 mt-3">
                    <div class="row">
                        <div class="col-12">
                            <h1 class="text-center"><%= title %></h1>
                        </div>
                        <div class="col-12">
                            <% if (flashError.length > 0) { %>
                              <div class="alert alert-danger" role="alert"><%= flashError %></div>
                            <% } %>
                        </div>
                        <div class="col-12">
                            <form method="POST" action="/reg">
                                <div class="form-group">
                                    <label for="fullName" class="text-uppercase">Full name</label>
                                    <input type="text" name="fullName" class="form-control" value="<%= fullName %>" placeholder="Enter full name">
                                </div>
                                <div class="form-group">
                                    <label for="email" class="text-uppercase">Email</label>
                                    <input type="email" name="email" class="form-control" value="<%= email %>" placeholder="Enter email">
                                </div>
                                <div class="form-group">
                                    <label for="password" class="text-uppercase">Password</label>
                                    <input type="password" name="password" class="form-control" placeholder="Enter password">
                                </div>
                                <div class="form-group">
                                    <label for="repeatPassword" class="text-uppercase">Repeat password</label>
                                    <input type="password" name="repeatPassword" class="form-control" placeholder="Enter password repeat">
                                </div>
                                <div class="form-check">
                                    <input type="checkbox" name="admin" class="form-check-input">
                                    <label class="form-check-label">Admin</label>
                                </div>
                                <button type="submit" name="submit" class="btn btn-primary btn-block">Sign Up</button>
                            </form>
                        </div>
                        <div class="col-12 mt-3">
                            <div class="footer text-center">
                                <p><a href="/auth" class="text-dark">Sign In</a></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </body>
</html>
