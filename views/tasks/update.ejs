<% include ../layout %>
<body>
  <div class="container">
    <div class="row">
      <div class="col">
        <h1><%= title %></h1>
        <% if (flashError.length > 0) { %>
          <div class="alert alert-danger" role="alert">
            <p><%= flashError %></p>
          </div>
        <% } %>
        <form method="POST" action="/tasks/update/<%= id %>">
          <div class="form-group">
            <label for="name">Input task name</label>
            <input type="text" name="name" class="form-control" value="<%= name %>" placeholder="Enter task name">
          </div>
          <div class="form-group">
            <label for="description">Input task description</label>
            <textarea class="form-control" rows="4" name="description"><%= description %></textarea>
          </div>
          <div class="form-group">
            <label for="importance">Select importance of task</label>
            <select class="form-control" name="importance" value="<%= importance %>">
              <option value="normal">обычная</option>
              <option value="important">важная</option>
              <option value="very_important">очень важная</option>
            </select>
          </div>
          <div class="form-group">
            <label for="name">Input task deadline</label>
            <input type="date" name="deadline" class="form-control js-date" value="<%= deadline %>" placeholder="Date">
          </div>
          <div class="form-check">
            <input type="checkbox" name="closed" class="form-check-input">
            <label class="form-check-label">Close task</label>
          </div>
          <button type="submit" name="submit" class="btn btn-primary">Update</button>
        </form>
      </div>
    </div>
  </div>
</body>
</html>
