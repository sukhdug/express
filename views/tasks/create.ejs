<% include ../layout %>
<body>
  <div class="container">
    <div class="row">
      <div class="col">
        <h1><%= title %></h1>
        <p><%= message %></p>
        <form method="POST" action="/tasks/create">
          <div class="form-group">
            <label for="name">Input task name</label>
            <input type="text" name="name" class="form-control" value="<%= name %>" placeholder="Enter task name">
          </div>
          <div class="form-group">
            <label for="author">Input author</label>
            <input type="text" name="author" class="form-control" value="<%= author %>" placeholder="Enter task author" readonly>
          </div>
          <div class="form-group">
            <label for="description">Input task description</label>
            <textarea class="form-control" rows="4" name="description"><%= description %></textarea>
          </div>
          <div class="form-group">
            <label for="importance">Select importance of task</label>
            <select class="form-control" name="importance">
              <option value="normal">обычная</option>
              <option value="important">важная</option>
              <option value="very_important">очень важная</option>
            </select>
          </div>
          <div class="form-group">
            <label for="description">Select deadline</label>
            <input type="date" class="form-control" name="deadline" value="<%= deadline %>" placeholder="Date">
          </div>
          <button type="submit" name="submit" class="btn btn-primary">Send</button>
        </form>
      </div>
    </div>
  </div>
</body>
</html>
